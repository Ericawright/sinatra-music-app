<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them:</strong>
    <ul>
      <% @song.errors.full_songs.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<a href="/songs"></a>

<form method="post" action="/songs">
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @song && @song.artist %>">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song && @song.title %>">
  </div>
  <div>
    <label>(optional)URL:</label>
    <input type="url" name="url" value="<%= @song && @song.url %>">
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>
</form>

